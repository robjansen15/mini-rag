<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>mini_rag</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <!-- Exclude project/ directory from compilation -->
    <Compile Remove="project/**/*.cs" />
    <Compile Remove="project/**" />
    
    <!-- Exclude project/ directory from content/resources -->
    <None Remove="project/**/*" />
    <Content Remove="project/**/*" />
  </ItemGroup>
</Project>